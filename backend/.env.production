# Production Environment Variables
# Copy this file to .env on your EC2 instance

NODE_ENV=production
PORT=5172

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quickcheck?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars-here
JWT_EXPIRE=7d

# Telnyx SMS Configuration
TELNYX_API_KEY=your-telnyx-api-key
TELNYX_PHONE_NUMBER=+12898064321
TELNYX_MESSAGING_PROFILE_ID=your-messaging-profile-id

# AWS S3 (for logo uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ca-central-1
S3_BUCKET_NAME=quickcheck-uploads

# CORS - Frontend URL
FRONTEND_URL=https://quickcheckin.ca
